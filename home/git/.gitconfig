[user]
    name = mbromell
    email = code@mamo.aleeas.com

[includeIf "gitdir:~/work/"]
    path = ~/work/.gitconfig

[init]
    defaultBranch = main

[core]
    editor = nvim
    excludesfile = ~/.gitignore.global

[pager]
    branch = false

[alias]
    a = add --all
    # Branch
    b = branch -vv
    ba = branch -vv -a
    br = branch -r
    # Commit
    c = commit
    ca = commit -a
    cm = commit -m
    cam = commit -am
    cd = commit --amend
    cad = commit --amend -a
    # Cherry Pick
    cp = cherry-pick
    cpa = cherry-pick --abort
    cpc = cherry-pick --continue
    # Logging
    l = log --graph --abbrev-commit --decorate \
        --format=format:'%C(auto)%h%C(auto)%d %s %C(italic dim white)~ %an'
    # Checking out
    o = checkout
    om = checkout main
    # Status
    s = status -sb
    sb = status --long
